{
  "$schema": "https://design-tokens.org/draft/json-schema.json",
  "elevation": {
    "level": {
      "0": {
        "$value": 0,
        "$type": "number",
        "$description": "No elevation - flat surface, same as background"
      },
      "1": {
        "$value": 1,
        "$type": "number",
        "$description": "Level 1 elevation - slightly raised (cards, buttons)"
      },
      "2": {
        "$value": 2,
        "$type": "number",
        "$description": "Level 2 elevation - raised (dropdowns, tooltips)"
      },
      "3": {
        "$value": 3,
        "$type": "number",
        "$description": "Level 3 elevation - floating (modals, dialogs)"
      },
      "4": {
        "$value": 4,
        "$type": "number",
        "$description": "Level 4 elevation - highest (notifications, popovers)"
      }
    },
    "blur": {
      "none": {
        "$value": "0px",
        "$type": "dimension",
        "$description": "No blur - sharp shadow"
      },
      "sm": {
        "$value": "4px",
        "$type": "dimension",
        "$description": "Small blur - subtle shadow"
      },
      "md": {
        "$value": "8px",
        "$type": "dimension",
        "$description": "Medium blur - standard shadow"
      },
      "lg": {
        "$value": "16px",
        "$type": "dimension",
        "$description": "Large blur - soft shadow"
      },
      "xl": {
        "$value": "24px",
        "$type": "dimension",
        "$description": "Extra large blur - dramatic shadow"
      }
    },
    "offset": {
      "y": {
        "sm": {
          "$value": "1px",
          "$type": "dimension",
          "$description": "Small vertical offset"
        },
        "md": {
          "$value": "2px",
          "$type": "dimension",
          "$description": "Medium vertical offset"
        },
        "lg": {
          "$value": "4px",
          "$type": "dimension",
          "$description": "Large vertical offset"
        },
        "xl": {
          "$value": "8px",
          "$type": "dimension",
          "$description": "Extra large vertical offset"
        }
      }
    }
  }
}

  "spacing": {
    "0": {
      "$value": "0px",
      "$type": "dimension",
      "$description": "Zero spacing - used for no margin or padding"
    },
    "2xs": {
      "$value": "2px",
      "$type": "dimension",
      "$description": "Extra extra small spacing - minimal separation"
